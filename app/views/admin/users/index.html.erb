<h1><%= t :listing_users %></h1>

<table>
  <tr>
    <th><%= t :full_name %></th>
    <th><%= t :email %></th>
    <th><%= t :permissions %></th>
    <th></th>
    <th></th>
  </tr>

  <% @users.each do |user| %>
    <tr>
      <td><%= link_to_if(can?(:read, User), "#{user.full_name}", admin_user_path(user)) {} %></td>
      <td><%= "#{user.email}" %></td>
      <td><%= "#{user.roles.collect { |role| role.name }}" %></td>
      <td><%= link_to_if(can?(:edit, User), image_tag("/images/edit_icon.gif"), edit_admin_user_path(user)) {} %></td>
      <td><%= link_to_if(can?(:delete, user), image_tag("/images/delete_icon.gif"), user, :confirm => t(:are_you_sure), :method => :delete) {} %></td>
    </tr>
  <% end %>
</table>

<br/>

<%= link_to t(:new_user), new_admin_user_path %>