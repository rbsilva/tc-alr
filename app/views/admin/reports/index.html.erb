<h1><%= t(:listing_reports).capitalize %></h1>

<table>
  <tr>
    <th><%= t(:description).capitalize %></th>
    <th><%= t(:fields).capitalize %></th>
    <th><%= t(:user).capitalize %></th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% reports.each do |report| %>
  <tr>
    <td><%= report.description %></td>
    <td><%= report_show_fields(report.fields) %></td>
    <td><%= report.user.full_name %></td>
    <td><%= link_to t(:pdf), admin_report_path(report, :format => :pdf), :target => '_blank' %></td>
    <td><%= link_to t(:show), admin_report_path(report) %></td>
    <td><%= link_to t(:delete), admin_report_path(report), confirm: t(:are_you_sure), method: :delete %></td>
  </tr>
<% end %>
</table>

