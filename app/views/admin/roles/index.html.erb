<h1><%= t :listing_roles %></h1>

<table>
  <tr>
    <th><%= t :name %></th>
    <th><%= t :models %></th>
    <th></th>
    <th></th>
  </tr>

  <% @roles.each do |role| %>
    <tr>
      <td><%= link_to_if(can?(:read, role), "#{role.name}", admin_role_path(role)) {} %></td>
      <td><%= roles_splitted(role)  %></td>
      <td><%= link_to_if(can?(:edit, role), t(:edit), edit_admin_role_path(role)) {} %></td>
      <td><%= link_to_if(can?(:delete, role), t(:delete), admin_role_path(role),:confirm => t(:are_you_sure), :method => :delete) {} %></td>
    </tr>
  <% end %>
</table>

<br/>

<%= link_to t(:new_role), new_admin_role_path %>
