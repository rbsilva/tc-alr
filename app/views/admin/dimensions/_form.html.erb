<% url = (@dimension.persisted?) ? admin_dimension_path(:id => @dimension.name) : admin_dimensions_path %>

<%= form_for(@dimension, :url => url, :method => ((@dimension.persisted?) ? :put : :post )) do |f| %>
  <% if @dimension.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@dimension.errors.count, "error") %>
        <%= t :prohibited_save, :this => t(:dimension, :count => 1),  :count => @dimension.errors.count %>
      </h2>

      <ul>
      <% @dimension.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= f.label :name %>
    <br/>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :columns %>
    <br/>
    <%= f.text_field :columns %>
  </div>

  <div class="actions">
    <%= f.submit t(:submit_dimension) %>
  </div>
<% end %>
