<%= form_for(@raw_file) do |f| %>
  <% if @raw_file.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@raw_file.errors.count, t(:error)) %>
        <%= t(:prohibited_save, :this => t(:path), :count => @raw_file.errors.count) %>
      </h2>

      <ul>
        <% @raw_file.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= f.label :file %>
    <br/>
	<%= f.file_field :file %>
    <%= image_tag "attach.png", :onclick => '$("#raw_file_file").click();return false;' %>
  </div>
  <div class="field">
    <%= f.label :template %>
    <br/>
    <%= f.text_field :template %>
  </div>
  <div class="field">
    <%= f.label :header %>
    <br/>
    <%= f.select :header, [['Columns','COL'],['Lines','LIN']] %>
  </div>
  <%= f.hidden_field :user_id, :value => @current_user.id %>
  <div class="actions">
    <%= f.submit t(:submit_file) %>
  </div>
<% end %>
